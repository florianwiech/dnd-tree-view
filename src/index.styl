* { box-sizing: border-box; }

html, body {
  height: 100%;
  margin: 0;
}

body {
  font-family: sans-serif;
  font-size: 14px;
  display: flex;
  flex-flow: column;
  background-color: #eee;
}

a { color: #00f; }
a:hover { text-decoration: none; }

header {
  padding: 1em;
  display: flex;
  align-items: center;
  h1, p { margin: 0; }
  p { margin-left: 1em; }
}

main {
  position: relative;
  background-color: #fff;
  border: 1px solid #888;
  flex: 1;
  margin: 0 1em;
  overflow-y: auto;
}

nav {
  display: flex;
  margin: 0.5em 1em 1em 1em;
  align-items: center;

  button {
    margin-right: 0.5em;
    padding: 0.5em;
  }
  
  .dnd-result {
    margin-left: 0.5em;
    flex: 1;
    text-align: right;
    color: #666;
  }
}

ol.tree {
  position: absolute;
  list-style: none;
  line-height: 1.5;
  margin: 0;
  padding: 0.25em 0.25em 2em 0.25em;
  width: 100%;
  min-height: 100%;

  * { -webkit-user-select: none; }

  &.drop-inside:before {
    position: absolute;
    content: "";
    border-top: 1px solid #888;
    left: 0.25em;
    right: 0.25em;
    top: 0.25em;
  }

  ol {
    list-style: none;
    margin: 0;
    padding-left: 24px;

    &:last-of-type.drop-below {
      border-bottom: 1px solid #888;
      padding-bottom: 0;
    }
  }

  li.item, li.group {
    background-clip: border-box;
    height: 28px;
    display: flex;
    padding: 1px;
    cursor: default;
    display: flex;
    align-items: center;

    > .icon, > .toggle {
      margin: -1px;
      width: 24px;
      height: 24px;
    }

    span {
      align-self: center;
      padding: 0.25em;
    }

    &:hover { background-color: #eee; }

    &.drop-above {
      border-top: 1px solid #888;
      padding-top: 0;
    }

    &.drop-inside {
      border: 1px solid #888;
      padding: 0;
    }

    &.selected { background: #beddf4; }
  }

  li.item {
    > .icon { background-image: url(item.svg); }

    &.drop-below {
      border-bottom: 1px solid #888;
      padding-bottom: 0;
    }
  }

  li.group {
    color: #444;

    > .toggle {
      background-image: url(group-open.svg);
      cursor: pointer;
    }

    &.drop-below {
      + ol {
        border-bottom: 1px solid #888;

        &:empty {
          margin-top: -1px;
          pointer-events: none;
        }
      }
    }
  }

  li.group.collapsed {
    > .toggle { background-image: url(group-closed.svg); }
    + ol > ol, + ol > li { display: none; }
  }
}
